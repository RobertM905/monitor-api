        "confirmation": {
          "type": "string",
          "title": "Do you have any masterplans to attach",
          "enum": ["Yes", "No"]
        }
      },
      "dependencies": {
        "confirmation": {
          "oneOf": [
            {
              "properties": {
                "confirmation": {
                  "enum": ["Yes"]
                },
                "planAttachment": {
                  "title": "Please attach masterplans here.",
