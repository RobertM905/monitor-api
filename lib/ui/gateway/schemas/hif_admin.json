{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "HIF Project Admin",
  "type": "object",
  "required": ["heContacts", "strategicLinks", "laContacts"],
  "properties": {
    "projectDetails": {
      "type": "object",
      "title": "",
      "properties": {
        "pcsNumber": {
          "type": "string",
          "title": "PCS Reference"
        },
        "BIDReference": {
          "type": "string",
          "title": "BID Reference"
        }
      }
    },
    "heContacts": {
      "type": "object",
      "horizontal": true,
      "required": ["relationshipManager", "projectAssuranceManager"],
      "title": "Homes England Contacts",
      "properties": {
        "relationshipManager": {
          "type": "string",
          "title": "Relationship Manager"
        },
        "projectAssuranceManager": {
          "type": "string",
          "title": "Project Assurance Manager"
        }
      }
    },
    "strategicLinks": {
      "type": "object",
      "title": "Strategic Links",
      "required": ["heProgrammeLinksMultiple", "mhclgProgrammeLinks", "ogdProgrammeLinks", "otherLinkedGovDepts", "linkedHousingPolicyAreas"],
      "properties": {
        "heProgrammeLinksMultiple": {
          "type": "array",
          "addable": true,
          "title": "Links with Homes England Programmes",
          "items": {
            "type": "object",
            "required": ["programmes", "description", "pcsRef"],
            "horizontal": true,
            "properties": {
              "programmes": {
                "type": "string",
                "title": "Programmes",
                "enum": [
                  "N/A",
                  "Accelerated Construction",
                  "Accelerated Land Disposal",
                  "Affordable Homes Programme",
                  "Build to Rent",
                  "City Deals",
                  "Economic Assets",
                  "Estate Regeneration",
                  "Get Britain Building",
                  "Local Infrastructure Fund",
                  "Pilot Transfer",
                  "Property and Regeneration",
                  "Public Land Investment Fund",
                  "Public Sector Land Acquisitions",
                  "Single Land",
                  "THBF - Long Term Fund",
                  "THBF - Short Term Fund"
                ]
              }
            },
            "dependencies": {
              "programmes": {
                "oneOf": [
                  {
                    "properties": {
                      "programmes": { "enum": ["N/A"] }
                    }
                  },
                  {
                    "properties": {
                      "programmes": {
                        "enum": [
                          "Accelerated Construction",
                          "Accelerated Land Disposal",
                          "Affordable Homes Programme",
                          "Build to Rent",
                          "City Deals",
                          "Economic Assets",
                          "Estate Regeneration",
                          "Get Britain Building",
                          "Local Infrastructure Fund",
                          "Pilot Transfer",
                          "Property and Regeneration",
                          "Public Land Investment Fund",
                          "Public Sector Land Acquisitions",
                          "Single Land",
                          "THBF - Long Term Fund",
                          "THBF - Short Term Fund"
                          ]
                        },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      },
                      "pcsRef": {
                        "type": "string",
                        "title": "PCS Reference"
                      }
                    }
                  }
                ]
              }
            }
          }
        },
        "mhclgProgrammeLinks": {
          "type": "array",
          "addable": true,
          "title": "Links with other MHCLG Programmes",
          "items": {
            "type": "object",
            "horizontal": true,
            "required": ["programmes", "description"],
            "properties": {
              "programmes": {
                "type": "string",
                "title": "Programmes",
                "enum": [
                  "Garden Towns",
                  "Garden Villages",
                  "Garden Communities",
                  "Land Release Fund",
                  "N/A"
                ]
              }
            },
            "dependencies": {
              "programmes": {
                "oneOf": [
                  {
                    "properties": {
                      "programmes": { "enum": ["N/A"] }
                    }
                  },
                  {
                    "properties": {
                      "programmes": {
                        "enum": [
                          "Garden Towns",
                          "Garden Villages",
                          "Garden Communities",
                          "Land Release Fund"
                        ]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  }
                ]
              }
            }
          }
        },
        "ogdProgrammeLinks": {
          "type": "array",
          "addable": true,
          "title": "Links with OGB programmes",
          "items": {
            "type": "object",
            "required": ["programmes", "description"],
            "horizontal": true,
            "properties": {
              "programmes": {
                "type": "string",
                "title": "Programmes",
                "enum": [
                  "N/A",
                  "NPIF",
                  "Growth and Housing Fund",
                  "RIS",
                  "RIS2",
                  "Other"
                ]
              }
            },
            "dependencies": {
              "programmes": {
                "oneOf": [
                  {
                    "properties": {
                      "programmes": {
                        "enum": ["N/A"]
                      }
                    }
                  },
                  {
                    "properties": {
                      "programmes": {
                        "enum": ["NPIF"]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  },
                  {
                    "properties": {
                      "programmes": {
                        "enum": ["Growth and Housing Fund"]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  },
                  {
                    "properties": {
                      "programmes": {
                        "enum": ["RIS"]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  },
                  {
                    "properties": {
                      "programmes": {
                        "enum": ["RIS2"]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  },
                  {
                    "properties": {
                      "programmes": {
                        "enum": ["Other"]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  }
                ]
              }
            }
          }
        },
        "otherLinkedGovDepts": {
          "type": "array",
          "addable": true,
          "title": "Other Government Deparments interested",
          "items": {
            "type": "object",
            "horizontal": true,
            "required": ["departments", "description"],
            "properties": {
              "departments": {
                "type": "string",
                "title": "Departments",
                "enum": [
                  "N/A",
                  "DfT",
                  "MHCLG",
                  "BEIS",
                  "DECC",
                  "DEFRA",
                  "DfE",
                  "DH",
                  "HMT",
                  "MOD"
                ]
              }
            },
            "dependencies": {
              "departments": {
                "oneOf": [
                  {
                    "properties": {
                      "departments": {
                        "enum": ["N/A"]
                      }
                    }
                  },
                  {
                    "properties": {
                      "departments": {
                        "enum": ["DfT"]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  },
                  {
                    "properties": {
                      "departments": {
                        "enum": ["MHCLG"]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  },
                  {
                    "properties": {
                      "departments": {
                        "enum": ["BEIS"]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  },
                  {
                    "properties": {
                      "departments": {
                        "enum": ["DECC"]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  },
                  {
                    "properties": {
                      "departments": {
                        "enum": ["DEFRA"]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  },
                  {
                    "properties": {
                      "departments": {
                        "enum": ["DfE"]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  },
                  {
                    "properties": {
                      "departments": {
                        "enum": ["DH"]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  },
                  {
                    "properties": {
                      "departments": {
                        "enum": ["HMT"]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  },
                  {
                    "properties": {
                      "departments": {
                        "enum": ["MOD"]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  }
                ]
              }
            }
          }
        },
        "linkedHousingPolicyAreas": {
          "type": "array",
          "addable": true,
          "title": "Housing Policy Areas",
          "items": {
            "type": "object",
            "horizontal": true,
            "title": "",
            "required": ["policies", "description"],
            "properties": {
              "policies": {
                "type": "string",
                "title": "Housing Policy Areas",
                "enum": [
                  "N/A",
                  "Custom Builds",
                  "Modern Method of Construction",
                  "SME",
                  "Garden Towns / Villages / Communities",
                  "Public Sector Land",
                  "Housing Zones",
                  "Accelerated Construction",
                  "Housing Deal",
                  "Brownfield Land",
                  "Large Development"
                ]
              }
            },
            "dependencies": {
              "policies": {
                "oneOf": [
                  {
                    "properties": {
                      "policies": { "enum": ["N/A"]}
                    }
                  },
                  {
                    "properties": {
                      "policies": {
                        "enum": [
                          "Custom Builds",
                          "Modern Method of Construction",
                          "SME",
                          "Garden Towns / Villages / Communities",
                          "Public Sector Land",
                          "Housing Zones",
                          "Accelerated Construction",
                          "Housing Deal",
                          "Brownfield Land",
                          "Large Development"
                        ]
                      },
                      "description": {
                        "type": "string",
                        "title": "Description"
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    },
    "laContacts": {
      "type": "object",
      "title": "LA Contacts",
      "required": ["laLead", "laSupporting", "laS151"],
      "properties": {
        "laLead": {
          "type": "object",
          "title": "LA Lead Contact",
          "horizontal": true,
          "required": ["name", "email"],
          "properties": {
            "name": {
              "type": "string",
              "title": "Name"
            },
            "email": {
              "type": "string",
              "title": "Email",
              "format": "email"
            }
          }
        },
        "laSupporting": {
          "title": "LA Supporting Contacts",
          "type": "array",
          "addable": true,
          "items": {
            "title": "Contacts",
            "type": "object",
            "required": ["name", "email"],
            "horizontal": true,
            "properties": {
              "name": {
                "type": "string",
                "title": "Name"
              },
              "email": {
                "type": "string",
                "title": "Email"
              }
            }
          }
        },
        "laS151": {
          "type": "object",
          "title": "LA S151 Officer",
          "horizontal": true,
          "required": ["name", "email"],
          "properties": {
            "name": {
              "type": "string",
              "title": "Name"
            },
            "email": {
              "type": "string",
              "title": "Email"
            }
          }
        }
      }
    }
  }
}